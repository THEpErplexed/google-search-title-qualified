{
  "name": "google-search-title-qualified",
  "author": "ncaq <ncaq@ncaq.net>",
  "license": "MIT",
  "scripts": {
    "archive": "git archive HEAD --output=google-search-title-qualified.tar.gz",
    "build": "esbuild --bundle --outdir=dist --target=firefox78 --minify src/background/main.ts src/content/main.ts",
    "fix": "FORCE_COLOR=1 run-p --print-label fix:*",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "lint": "FORCE_COLOR=1 run-p --print-label lint:*",
    "lint:eslint": "eslint --ignore-path .gitignore --cache --ext .ts --ext .tsx .",
    "lint:prettier": "prettier --ignore-path .gitignore --check **/*.ts",
    "lint:tsc": "tsc --noEmit",
    "lint:web-ext": "web-ext lint",
    "package": "rm -rf dist/ && yarn build && web-ext build --config web-ext-config.js && yarn archive",
    "start": "web-ext run --firefox-profile google-search-title-qualified",
    "watch": "esbuild --bundle --watch --outdir=dist --target=firefox78 --sourcemap src/background/main.ts src/content/main.ts"
  },
  "devDependencies": {
    "@mysticatea/eslint-plugin": "^13.0.0",
    "@types/encoding-japanese": "^1.0.17",
    "@types/node": "^15.0.1",
    "@types/node-fetch": "^2.5.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "esbuild": "^0.11.18",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "web-ext": "^6.1.0",
    "web-ext-submit": "^6.1.0"
  },
  "dependencies": {
    "date-fns": "^2.21.3",
    "dexie": "^3.0.3",
    "encoding-japanese": "^1.0.30",
    "node-fetch": "^2.6.1",
    "webextension-polyfill-ts": "^0.25.0"
  }
}
